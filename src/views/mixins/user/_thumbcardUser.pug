mixin thumbcard(User)
  .col-md-4
    .card.mb-4.shadow-sm
      svg.bd-placeholder-img.card-img-top&attributes({"width": "100%"}, {"height": "225"}, {"focusable": "false"}, {"role": "img"})
        title toto
        rect(width="100%" height="100%" fill="#55595c")
        text(x="50%" y="50%" fill="#eceeef" dy=".3em") #{User.firstname} #{User.lastname}
      .card-body
        .card-text.mb-4 nom d'utilisateur: #{User.userName}
        .card-text.mb-4 genre:  #{User.gender}
        .card-text.mb-4 mail:  #{User.mail}
        .d-flex.justify-content-between.align-items-center
          .btn-group
            a.btn.btn-sm.btn-outline-secondary(href=`/users/show/${User._id}`) DÃ©tails
            a.btn.btn-sm.btn-outline-secondary(href=`/users/edit/${User._id}`) Editer
            a.btn.btn-sm.btn-outline-secondary(href=`/users/delete/${User._id}`) Supprimer

