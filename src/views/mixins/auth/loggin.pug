extends layoutAuth

block content
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
				<div class="card card-signin my-5">
					<div class="card-body">
						<h5 class="card-title text-center">Se connecter</h5>
						<form class="form-signin" action="/auth" method="post">
							<div class="form-label-group">
								<input type="text" id="userName" name="userName" class="form-control" placeholder="nom d'utilisateur" required autofocus>
								<label for="userName">nom d'utilisateur</label>
							</div>

							<div class="form-label-group">
								<input type="password" id="pwd" name="pwd" class="form-control" placeholder="mot de passe" required>
								<label for="pwd">mot de passe</label>
							</div>
							<button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">se connecter</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>