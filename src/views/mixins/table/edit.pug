extends ../layout

block content
  .album.py-5.bg-light
    .container
        <form class="form-horizontal" action=#{url} method="post">
          <div id="fgInputName" class="form-group has-feedback">
            <label for="name" class="col-sm-2 control-label">Nom de la table</label>
            <div class="col-sm-8">
              <input value=#{table.name} class="form-control" type="text" id="name" name="name">
            </div>
          </div>
          <div id="fgTournamentName" class="form-group has-feedback">
            <div class="col-sm-8">
              <select name="idTournament" class="selectpicker" multiple title="Nom du tournoi" data-style="btn-primary">
                each tournament in tournaments
                  <option value=#{tournament._id}>#{tournament.name}</option>
              </select>
            </div>
          </div>

            <div id="fgUserName" class="form-group has-feedback">
            <div class="col-sm-8">
              <select name="idUser" class="selectpicker" multiple title="Nom du Croupier" data-style="btn-primary">
                each user in users
                  <option value=#{user._id}>#{user.firstname} #{user.lastname}</option>
              </select>
            </div>
          </div>
        
          <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
              <input id="btnSubmit" type="submit" value="enregistrer" class="btn btn-success">
            </div>
          </div>
        </form>
            