mixin thumbcard(Table)
  .col-md-4
    .card.mb-4.shadow-sm
      svg.bd-placeholder-img.card-img-top&attributes({"width": "100%"}, {"height": "225"}, {"focusable": "false"}, {"role": "img"})
        title #{Table.Tournament.name}
        rect(width="100%" height="100%" fill="#55595c")
        text(x="50%" y="50%" fill="#eceeef" dy=".3em") #{Table.name}
      .card-body
        .card-text tournoi en cours : #{Table.Tournament.name}
        .card-text.mb-4 Nom du croupier: #{Table.User.firstname} #{Table.User.lastname}
        .d-flex.justify-content-between.align-items-center
          .btn-group
            a.btn.btn-sm.btn-outline-secondary(href=`/tables/show/${Table._id}`) DÃ©tails
            a.btn.btn-sm.btn-outline-secondary(href=`/tables/edit/${Table._id}`) Editer
            a.btn.btn-sm.btn-outline-secondary(href=`/tables/delete/${Table._id}`) Supprimer
