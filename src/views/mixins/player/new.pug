extends ../layout

block content
  .album.py-5.bg-light
    .container
        <form class="form-horizontal" action="/players/new" method="post">
          <div id="fgTournamentName" class="form-group has-feedback">
            <div class="col-sm-8">
              <select name="idTournament" class="selectpicker" multiple title="Nom du tournoi" data-style="btn-primary">
                each tournament in tournaments
                  <option value=#{tournament._id}>#{tournament.name}</option>
              </select>
            </div>
          </div>

            <div id="fgUserName" class="form-group has-feedback">
            <div class="col-sm-8">
              <select name="idTable" class="selectpicker" multiple title="Nom de la table de départ" data-style="btn-primary">
                each table in tables
                  <option value=#{table._id}>#{table.name}</option>
              </select>
            </div>
          </div>

          <div id="fgInputFirstName" class="form-group has-feedback">
            <div class="col-sm-8">
              <input class="form-control" type="text" id="firstname" name="firstname" placeholder="Prénom">
            </div>
          </div>
          <div id="fgLastName" class="form-group has-feedback">
            <div class="col-sm-8">
              <input class="form-control" type="text" id="lastname" name="lastname" placeholder="Nom">
            </div>
          </div>
          <div id="fgGender" class="form-group has-feedback">
            <div class="col-sm-8">
              <select name="gender" class="selectpicker" multiple title="Genre" data-style="btn-primary">
                <option>Homme</option>
                <option>Femme</option>
              </select>
            </div>
          </div>

          <div id="fgMail" class="form-group has-feedback">
            <div class="col-sm-8">
              <input type="email" id="mail" name="mail" class="form-control" placeholder="mail">
            </div>
          </div>

           <div  id="fgnumberPokerChipsRemaining" class="form-group has-feedback">
            <label for="cave" class="col-sm-2 control-label">Nombre de jetons de départ</label>
            <div class="col-sm-8">
              <input type="number" id="numberPokerChipsRemaining" name="numberPokerChipsRemaining" class="form-control">
            </div>
          </div>
        
          <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
              <input id="btnSubmit" type="submit" value="enregistrer" class="btn btn-success">
            </div>
          </div>
        </form>
            