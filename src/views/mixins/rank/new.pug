extends ../layout

block content
  .album.py-5.bg-light
    .container
        <form class="form-horizontal" action=#{url} method="post">
          <div id="fgPlayerName" class="form-group has-feedback">
            <div class="col-sm-8">
              <select name="idPlayer" class="selectpicker" multiple title="nom du joueur" data-style="btn-primary">
                each player in players
                  <option value=#{player._id}>#{player.firstname} #{player.lastname}</option>
              </select>
            </div>
          </div>
          <div  id="fgRank" class="form-group has-feedback">
            <label for="range" class="col-sm-2 control-label">Position dans le classement</label>
            <div class="col-sm-8">
              <input type="number" id="range" name="Range" class="form-control">
            </div>
          </div>
           <div  id="fgScore" class="form-group has-feedback">
            <label for="Score" class="col-sm-2 control-label">Score</label>
            <div class="col-sm-8">
              <input type="number" id="Score" name="Score" class="form-control">
            </div>
          </div>
          <div id="fgStatus" class="form-group has-feedback">
            <div class="col-sm-8">
              <select name="status" class="selectpicker" multiple title="Statut du joueur" data-style="btn-primary">
                <option>InGame</option>
                <option>Eliminer</option>
                <option>Vainqueur</option>
              </select>
            </div>
          </div>
         
          <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
              <input id="btnSubmit" type="submit" value="enregistrer" class="btn btn-success">
            </div>
          </div>
        </form>
            