mixin thumbcard(Tournament)
  .col-md-4
    .card.mb-4.shadow-sm
      svg.bd-placeholder-img.card-img-top&attributes({"width": "100%"}, {"height": "225"}, {"focusable": "false"}, {"role": "img"})
        title #{Tournament.name}
        rect(width="100%" height="100%" fill="#55595c")
        text(x="50%" y="50%" fill="#eceeef" dy=".3em") #{Tournament.name}
      .card-body
        .card-text du #{Tournament.startdate.toLocaleString()}
        .card-text.mb-4 jusqu'au #{Tournament.enddate.toLocaleString()}
        .card-text.mb-4 prix à gagner : #{Tournament.priceToWin} €
        .card-text.mb-4 cave de départ : #{Tournament.cave} €
        .card-text.mb-4 mise d'entrée : #{Tournament.buyIn} €
        .d-flex.justify-content-between.align-items-center
          .btn-group
            button.btn.btn-sm.btn-outline-secondary Détails
            button.btn.btn-sm.btn-outline-secondary Editer
            button.btn.btn-sm.btn-outline-secondary Supprimer
