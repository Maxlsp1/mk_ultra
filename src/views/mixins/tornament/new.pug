extends ../layout

block content
block content
  .album.py-5.bg-light
    .container
        <form class="form-horizontal" action="/tornament/new" method="post">
          <div id="fgInputName" class="form-group has-feedback">
            <label class="col-sm-2 control-label" for="name">Nom du tournoi</label>
            <div class="col-sm-8">
              <input class="form-control" type="text" id="name" name="name" placeholder="nom">
            </div>
          </div>
          <div id="fgComments" class="form-group has-feedback">
            <label for="description" class="col-sm-2 control-label">Description</label>
            <div class="col-sm-8">
              <textarea id="description" name="description" class="form-control"></textarea>
            </div>
          </div>
          <div id="fgStartDate" class="form-group has-feedback">
            <label for="startdate" class="col-sm-2 control-label">Date de début du tournoi</label>
            <input type="datetime-local" id="startdate" name="startdate" class="form-control">
          </div>
          <div id="fgEndDate" class="form-group has-feedback">
            <label for="enddate" class="col-sm-2 control-label">Date de fin du tournoi</label>
            <input type="datetime-local" id="enddate" name="enddate" class="form-control">
          </div>
          <div  id="fgParticipantMax" class="form-group has-feedback">
            <label for="maxParticipant" class="col-sm-2 control-label">Nombre maximum de participants</label>
            <input type="number" id="maxParticipant" name="maxParticipant" class="form-control">
          </div>
          <div  id="fgPriceToWin" class="form-group has-feedback">
            <label for="priceToWin" class="col-sm-2 control-label">Prix à gagner</label>
            <input type="text" id="priceToWin" name="priceToWin" class="form-control">
          </div>
          <div  id="fgOrganizer" class="form-group has-feedback">
            <label for="organizer" class="col-sm-2 control-label">Nom de l'organisateur</label>
            <input type="text" id="organizer" name="organizer" class="form-control">
          </div>
          <div  id="fgcave" class="form-group has-feedback">
            <label for="cave" class="col-sm-2 control-label">montant de la cave</label>
            <input type="number" id="cave" name="cave" class="form-control">
          </div>
          <div  id="fgbuyIn" class="form-group has-feedback">
            <label for="buyIn" class="col-sm-2 control-label">mise pour entrer</label>
            <input type="number" id="buyIn" name="buyIn" class="form-control">
          </div>
         
          <div class="form-group">
            <div class="col-sm-8 col-sm-offset-2">
              <input id="btnSubmit" type="submit" value="Submit" class="btn btn-success">
            </div>
          </div>
        </form>
            